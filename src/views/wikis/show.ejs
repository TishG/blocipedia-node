<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">
      <% if(currentUser) { %>
      <h1 class="d-flex justify-content-md-center text-info my-3"><%= wiki.title %></h1>
      <a href="/wikis/<%= wiki.id %>/edit" class="btn btn-warning">Edit</a>
      <form style="display:initial" action="/wikis/<%= wiki.id %>/destroy" method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
      </form>
     <p class="d-flex justify-content-md-center"><%= wiki.body %></p>
     <% } else { %>
      <h1 class="d-flex justify-content-md-center text-info my-3"><%= wiki.title %></h1>
      <p class="d-flex justify-content-md-center"><%= wiki.body %></p>
     <% } %>
    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>