<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">
      <h1 class="text-info text-center my-3">New Wiki</h1>
      <form action="/wikis/create" method="post">
        <div class="form-group text-info" style="font-weight: 500">
          <label for="title">Wiki title</label>
          <input type="text" class="form-control" name="title" aria-describedby="titleHelp" placeholder="Enter Title">
        </div>
        <div class="form-group text-info" style="font-weight: 500">
          <label for="body">Wiki body</label>
          <textarea rows="30" class="form-control" name="body" placeholder="Enter Wiki body"></textarea>
        </div>
        <div class="d-flex flex-row-reverse flex-md-row">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
      </form>
    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>